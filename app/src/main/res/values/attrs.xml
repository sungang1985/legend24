<?xml version="1.0" encoding="utf-8"?>

<resources>

    <declare-styleable name="GameView">
        <!-- Defines the aspect to use when drawing PatternView. -->
        <attr name="gv_aspect">
            <!-- Square; the default value. -->
            <enum name="square" value="0" />
            <enum name="lock_width" value="1" />
            <enum name="lock_height" value="2" />
        </attr>
        <!-- Defines the regular pattern color. -->
        <attr name="gv_regularColor" format="color|reference" />
        <!-- Defines the error color. -->
        <attr name="gv_errorColor" format="color|reference" />
        <!-- Defines the success color. -->
        <attr name="gv_successColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="GameViewTheme">
        <!-- Default PatternView style. -->
        <attr name="gameViewStyle" format="reference" />
    </declare-styleable>
</resources>
